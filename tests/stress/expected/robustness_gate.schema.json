{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "GKA Robustness Gate",
  "type": "object",
  "required": [
    "schema_version",
    "enabled",
    "passed",
    "checks"
  ],
  "properties": {
    "schema_version": {
      "type": "integer",
      "const": 1
    },
    "enabled": {
      "type": "boolean"
    },
    "passed": {
      "type": "boolean"
    },
    "checks": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "name",
          "op",
          "value",
          "threshold",
          "pass"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "op": {
            "type": "string",
            "enum": [
              "<=",
              ">="
            ]
          },
          "value": {
            "type": "number"
          },
          "threshold": {
            "type": "number"
          },
          "pass": {
            "type": "boolean"
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
